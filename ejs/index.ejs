
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<div class="jumbotron">
    <h1>Workshops</h1>
    <p>here is the list of workshop</p>
</div>

<a type="button" href="/workshop" class="btn btn-success btn-lg">Create new workshop</a>

<ul class="list-unstyled"></ul>
<% 
var id = 0;
workshops.forEach(function(workshop) { %>
    <li class="media my-4">
        <div class="media-body">
            <h5 class="mt-0 mb-1"><%= workshop.name %></h5>
            <%= workshop.description %>        
            
        
        </div>  
        <form action = "/update-workshop" method="GET">
            <button id="btn<%=id%>" type="submit" class="btn btn-warning">Modify</button>
            <input hidden name = "update" value= "<%=id%>">
        </form>
        <form action = "/remove-workshop" method="POST">
            <button id="btn<%=id%>" type="submit" class="btn btn-danger">Delete</button>
            <input hidden name = "remove" value= "<%=id%>">
        </form>

    </li>

    
<% id++;
}); %>
</ul>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
